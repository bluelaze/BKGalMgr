<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="BKGalMgr.Views.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:local="using:BKGalMgr.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:mcontrols="using:CommunityToolkit.WinUI.Controls"
      xmlns:mui="using:CommunityToolkit.WinUI"
      xmlns:vm="using:BKGalMgr.ViewModels"
      NavigationCacheMode="Required"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="titlebar_Grid" Height="{StaticResource TitleBarHeight}">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Padding" Value="0,0,0,2" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </StackPanel.Resources>

                <Image Width="20"
                       Height="20"
                       Margin="16,0,0,0"
                       VerticalAlignment="Center"
                       Source="ms-appx:///BKGalMgr.ico" />
                <TextBlock Padding="0,0,0,2"
                           FontSize="14"
                           FontWeight="Bold"
                           Text="BKGalMgr" />

            </StackPanel>
        </Grid>
        <NavigationView x:Name="root_navigationview"
                        Grid.Row="1"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="False"
                        OpenPaneLength="200"
                        SelectionChanged="root_navigationview_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="home_navitem"
                                    x:Uid="Main_Nav_Home"
                                    Icon="Home" />
                <NavigationViewItem x:Name="browser_navitem"
                                    x:Uid="Main_Nav_Browser"
                                    Icon="{mui:FontIcon Glyph=&#xE773;}" />
                <NavigationViewItem x:Name="review_navitem"
                                    x:Uid="Main_Nav_Review"
                                    Icon="{mui:FontIcon Glyph=&#xE9D2;}" />
                <NavigationViewItem x:Name="migration_navitem"
                                    x:Uid="Main_Nav_Migration"
                                    Icon="{mui:FontIcon Glyph=&#xE8F7;}" />
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem x:Name="repository_navitem" Icon="{mui:FontIcon Glyph=&#xE8F1;}">
                    <NavigationViewItem.Resources>
                        <Thickness x:Key="NavigationViewItemContentPresenterMargin">4,-1,0,-1</Thickness>
                    </NavigationViewItem.Resources>
                    <Grid>
                        <TextBlock x:Uid="Main_Nav_Library" />
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button x:Name="repository_gridview_Button"
                                    Background="Transparent"
                                    BorderBrush="{x:Null}"
                                    Click="repository_gridview_Button_Click"
                                    Content="{mui:FontIcon FontSize=10,
                                                           Glyph=&#xF0E2;}" />
                            <Button x:Name="add_repository_Button"
                                    Background="Transparent"
                                    BorderBrush="{x:Null}"
                                    Click="add_repository_Button_Click"
                                    Content="{mui:FontIcon FontSize=10,
                                                           Glyph=&#xE948;}" />

                        </StackPanel>
                    </Grid>
                </NavigationViewItem>
                <NavigationViewItemSeparator x:Name="repository_NavigationViewItemSeparator" />
                <NavigationViewItem x:Name="repository_listview_navitem"
                                    IsEnabled="False"
                                    Loaded="repository_listview_navitem_Loaded">
                    <NavigationViewItem.Resources>
                        <x:Double x:Key="NavigationViewCompactPaneLength">0</x:Double>
                        <Thickness x:Key="NavigationViewItemButtonMargin">0</Thickness>
                        <Thickness x:Key="NavigationViewItemContentPresenterMargin">0</Thickness>
                        <StaticResource x:Key="NavigationViewItemBackgroundPointerOver" ResourceKey="ControlFillColorTransparentBrush" />
                    </NavigationViewItem.Resources>
                    <ListView x:Name="repository_ListView"
                              MaxHeight="220"
                              AllowDrop="True"
                              CanDragItems="True"
                              CanReorderItems="True"
                              DragItemsCompleted="repository_ListView_DragItemsCompleted"
                              ItemsSource="{x:Bind ViewModel.LibraryAndManagePageViewModel.Repository, Mode=OneTime}"
                              ScrollViewer.VerticalScrollBarVisibility="Hidden"
                              SelectedItem="{x:Bind ViewModel.LibraryAndManagePageViewModel.SelectedRepository, Mode=TwoWay}"
                              SizeChanged="repository_ListView_SizeChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm:RepositoryInfo">
                                <Grid Padding="0,8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem x:Name="edit_repository_menuflyoutitem"
                                                            x:Uid="Commom_MenuItem_Edit"
                                                            Click="edit_repository_Menuflyoutitem_Click" />
                                            <MenuFlyoutItem x:Uid="Commom_MenuItem_Open_Folder" Command="{x:Bind OpenJsonFolderCommand, Mode=OneTime}" />
                                            <ToggleMenuFlyoutItem x:Uid="Commom_MenuItem_Ignore" IsChecked="{x:Bind Ignore, Mode=TwoWay}" />
                                            <MenuFlyoutSeparator />
                                            <MenuFlyoutItem x:Name="remove_repository_menuflyoutitem"
                                                            x:Uid="Commom_MenuItem_Remove"
                                                            Click="remove_repository_Menuflyoutitem_Click">
                                                <MenuFlyoutItem.Resources>
                                                    <StaticResource x:Key="MenuFlyoutItemForeground" ResourceKey="SystemFillColorCriticalBrush" />
                                                    <StaticResource x:Key="MenuFlyoutItemForegroundPointerOver" ResourceKey="SystemFillColorCriticalBrush" />
                                                    <StaticResource x:Key="MenuFlyoutItemForegroundPressed" ResourceKey="SystemFillColorCriticalBrush" />
                                                </MenuFlyoutItem.Resources>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Grid.ContextFlyout>
                                    <interactivity:Interaction.Behaviors>
                                        <interactivity:EventTriggerBehavior EventName="PointerEntered">
                                            <interactivity:ChangePropertyAction PropertyName="Visibility"
                                                                                TargetObject="{Binding ElementName=games_count_TextBlock}"
                                                                                Value="Visible" />
                                        </interactivity:EventTriggerBehavior>
                                        <interactivity:EventTriggerBehavior EventName="PointerExited">
                                            <interactivity:ChangePropertyAction PropertyName="Visibility"
                                                                                TargetObject="{Binding ElementName=games_count_TextBlock}"
                                                                                Value="Collapsed" />
                                        </interactivity:EventTriggerBehavior>
                                    </interactivity:Interaction.Behaviors>
                                    <TextBlock Text="{x:Bind Name, Mode=OneWay}" />
                                    <TextBlock x:Name="games_count_TextBlock"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               Style="{ThemeResource CaptionTextBlockStyle}"
                                               Text="{x:Bind Games.Count, Mode=OneWay}"
                                               Visibility="Collapsed" />
                                    <TextBlock Grid.Row="1"
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                               Style="{ThemeResource CaptionTextBlockStyle}"
                                               Text="{x:Bind FolderPath, Mode=OneTime}"
                                               TextWrapping="NoWrap"
                                               ToolTipService.ToolTip="{x:Bind FolderPath, Mode=OneTime}" />
                                    <FontIcon Grid.RowSpan="2"
                                              Grid.Column="1"
                                              Margin="4,0,0,0"
                                              FontSize="12"
                                              Glyph="&#xECE4;"
                                              Visibility="{x:Bind Ignore, Mode=OneWay}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </NavigationViewItem>
                <NavigationViewItemSeparator />
                <NavigationViewItem x:Name="settings_navitem"
                                    x:Uid="Main_Nav_Settings"
                                    Icon="{mui:FontIcon Glyph=&#xE713;}" />
            </NavigationView.FooterMenuItems>

            <Frame x:Name="root_frame"
                   Navigated="root_frame_Navigated"
                   Navigating="root_frame_Navigating"
                   SizeChanged="root_frame_SizeChanged" />

        </NavigationView>
        <Popup x:Name="repository_gridview_Popup"
               Grid.Row="1"
               HorizontalOffset="201"
               IsLightDismissEnabled="True"
               VerticalOffset="1">
            <Grid x:Name="repository_gridview_root_Grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition x:Name="repository_gridview_root_sizer_RowDefinition" Height="Auto" />
                </Grid.RowDefinitions>
                <Grid x:Name="repository_gridview_Grid"
                      Grid.Row="1"
                      Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}">
                    <ListView x:Name="repository_gridview_ListView"
                              Padding="{ThemeResource ContentDialogPadding}"
                              AllowDrop="True"
                              CanDragItems="True"
                              CanReorderItems="True"
                              DragItemsCompleted="repository_ListView_DragItemsCompleted"
                              ItemsSource="{x:Bind ViewModel.LibraryAndManagePageViewModel.Repository, Mode=OneTime}"
                              SelectedItem="{x:Bind ViewModel.LibraryAndManagePageViewModel.SelectedRepository, Mode=TwoWay}"
                              SelectionChanged="repository_gridview_ListView_SelectionChanged">
                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                <Setter Property="Margin" Value="0,0,20,0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm:RepositoryInfo">
                                <Grid Width="286"
                                      Padding="0,12"
                                      Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem x:Name="edit_repository_menuflyoutitem"
                                                            x:Uid="Commom_MenuItem_Edit"
                                                            Click="edit_repository_Menuflyoutitem_Click" />
                                            <MenuFlyoutItem x:Uid="Commom_MenuItem_Open_Folder" Command="{x:Bind OpenJsonFolderCommand, Mode=OneTime}" />
                                            <ToggleMenuFlyoutItem x:Uid="Commom_MenuItem_Ignore" IsChecked="{x:Bind Ignore, Mode=TwoWay}" />
                                            <MenuFlyoutSeparator />
                                            <MenuFlyoutItem x:Name="remove_repository_menuflyoutitem"
                                                            x:Uid="Commom_MenuItem_Remove"
                                                            Click="remove_repository_Menuflyoutitem_Click">
                                                <MenuFlyoutItem.Resources>
                                                    <StaticResource x:Key="MenuFlyoutItemForeground" ResourceKey="SystemFillColorCriticalBrush" />
                                                    <StaticResource x:Key="MenuFlyoutItemForegroundPointerOver" ResourceKey="SystemFillColorCriticalBrush" />
                                                    <StaticResource x:Key="MenuFlyoutItemForegroundPressed" ResourceKey="SystemFillColorCriticalBrush" />
                                                </MenuFlyoutItem.Resources>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Grid.ContextFlyout>
                                    <interactivity:Interaction.Behaviors>
                                        <interactivity:EventTriggerBehavior EventName="PointerEntered">
                                            <interactivity:ChangePropertyAction PropertyName="Visibility"
                                                                                TargetObject="{Binding ElementName=games_count_TextBlock}"
                                                                                Value="Visible" />
                                        </interactivity:EventTriggerBehavior>
                                        <interactivity:EventTriggerBehavior EventName="PointerExited">
                                            <interactivity:ChangePropertyAction PropertyName="Visibility"
                                                                                TargetObject="{Binding ElementName=games_count_TextBlock}"
                                                                                Value="Collapsed" />
                                        </interactivity:EventTriggerBehavior>
                                    </interactivity:Interaction.Behaviors>

                                    <ContentPresenter Width="80"
                                                      Height="80"
                                                      CornerRadius="{ThemeResource ControlCornerRadius}">
                                        <Image Source="{x:Bind SelectedGame.CoverImageSource, Mode=OneWay}" Stretch="UniformToFill" />
                                    </ContentPresenter>

                                    <Grid Grid.Column="1"
                                          Margin="10,0,0,0"
                                          VerticalAlignment="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock FontSize="16"
                                                   Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                   Text="{x:Bind Name, Mode=OneWay}" />
                                        <TextBlock x:Name="games_count_TextBlock"
                                                   Margin="8,0"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   Style="{ThemeResource CaptionTextBlockStyle}"
                                                   Text="{x:Bind Games.Count, Mode=OneWay}"
                                                   Visibility="Collapsed" />
                                        <TextBlock Grid.Row="1"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   Text="{x:Bind Description, Mode=OneWay}"
                                                   TextWrapping="NoWrap"
                                                   Visibility="{x:Bind Description, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
                                        <TextBlock Grid.Row="2"
                                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                   Style="{ThemeResource CaptionTextBlockStyle}"
                                                   Text="{x:Bind FolderPath, Mode=OneTime}"
                                                   TextWrapping="NoWrap"
                                                   ToolTipService.ToolTip="{x:Bind FolderPath, Mode=OneTime}" />
                                    </Grid>
                                    <FontIcon Grid.Column="2"
                                              FontSize="12"
                                              Glyph="&#xECE4;"
                                              Visibility="{x:Bind Ignore, Mode=OneWay}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ToggleButton x:Name="repository_gridview_ToggleButton"
                                  Padding="4"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Top"
                                  Background="Transparent"
                                  BorderBrush="{x:Null}"
                                  Checked="repository_gridview_ToggleButton_IsChecked"
                                  Content="{mui:FontIcon FontSize=12,
                                                         Glyph=&#xE840;}"
                                  CornerRadius="0"
                                  Unchecked="repository_gridview_ToggleButton_IsChecked" />
                </Grid>
                <mcontrols:GridSplitter Grid.Row="1"
                                        Height="12"
                                        VerticalAlignment="Top">
                    <mcontrols:GridSplitter.RenderTransform>
                        <TranslateTransform Y="-6" />
                    </mcontrols:GridSplitter.RenderTransform>
                </mcontrols:GridSplitter>
            </Grid>
        </Popup>
        <TextBlock x:Name="love_and_peace_textblock"
                   Grid.RowSpan="2"
                   Margin="0,-48,0,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="128"
                   Opacity="0.1"
                   Text="LOVE AND PEACE" />
    </Grid>
</Page>
