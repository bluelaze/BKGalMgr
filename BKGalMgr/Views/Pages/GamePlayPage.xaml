<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="BKGalMgr.Views.Pages.GamePlayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:behaviors="using:BKGalMgr.Behaviors"
      xmlns:controls="using:BKGalMgr.Views.Controls"
      xmlns:converters="using:BKGalMgr.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:diagnostics="using:System.Diagnostics"
      xmlns:extensions="using:BKGalMgr.Extensions"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:local="using:BKGalMgr.Views.Pages"
      xmlns:mbehaviors="using:CommunityToolkit.WinUI.Behaviors"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:mcollections="using:CommunityToolkit.WinUI.Collections"
      xmlns:mcontrols="using:CommunityToolkit.WinUI.Controls"
      xmlns:mconverters="using:CommunityToolkit.WinUI.Converters"
      xmlns:mtriggers="using:CommunityToolkit.WinUI"
      xmlns:mui="using:CommunityToolkit.WinUI"
      xmlns:vm="using:BKGalMgr.ViewModels"
      d:DataContext="{d:DesignInstance local:GamePlayPage}"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      RequestedTheme="{x:Bind ViewModel.Game.CustomTheme.RequestedTheme, Mode=OneWay}"
      mc:Ignorable="d">
    <Page.Resources>
        <!--
            To 不能用x:Bind绑定到静态属性，否者如果使用coverter的属性用x:Bind，就会报错
            可能相关：https://github.com/microsoft/microsoft-ui-xaml/issues/8397
        -->
        <converters:ObjectToVisibilityConverter x:Key="GroupTypeToVisibilityConverter" To="PlaceholderForAdd" />

        <Style x:Key="BottomButtonStyle"
               BasedOn="{StaticResource DefaultButtonStyle}"
               TargetType="Button">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CornerRadius" Value="18" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}" />
            <Setter Property="BorderBrush" Value="{x:Null}" />
        </Style>
    </Page.Resources>
    <Grid x:Name="root_Grid"
          Background="Transparent"
          PointerPressed="root_Grid_PointerPressed">
        <Grid.Resources>
            <ImageBrush x:Key="BackgroundImageBrush"
                        ImageSource="{x:Bind ViewModel.Game.CustomTheme.BackgroundImageSource, Mode=OneWay}"
                        Opacity="{x:Bind ViewModel.Game.CustomTheme.BackgroundImageOpacity, Mode=OneWay}"
                        Stretch="UniformToFill" />
            <LinearGradientBrush x:Key="BackgroundLinearGradientBrush" StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0.0" Color="{x:Bind ViewModel.Game.CustomTheme.LinearGradientStartColor, Mode=OneWay}" />
                <GradientStop Offset="1.0" Color="{x:Bind ViewModel.Game.CustomTheme.LinearGradientEndColor, Mode=OneWay}" />
            </LinearGradientBrush>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="PlayingState">
                    <VisualState.StateTriggers>
                        <mtriggers:IsEqualStateTrigger Value="{x:Bind ViewModel.Game.PlayStatus, Mode=OneWay}" To="Playing" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--<Setter Target="played_time_TextBlock.Foreground" Value="{ThemeResource SystemFillColorSuccessBrush}" />-->
                        <Setter Target="le_Button.IsEnabled" Value="False" />
                        <Setter Target="stop_Button.IsEnabled" Value="True" />
                        <Setter Target="screen_capture_Button.IsEnabled" Value="True" />

                        <Setter Target="play_Button.Foreground" Value="{ThemeResource SystemFillColorSuccessBrush}" />
                        <Setter Target="play_Button.Content" Value="{mui:FontIcon Glyph=&#xE769;}" />

                        <Setter Target="play_Button.Content" Value="{mui:FontIcon Glyph=&#xE769;}" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="PauseState">
                    <VisualState.StateTriggers>
                        <mtriggers:IsEqualStateTrigger Value="{x:Bind ViewModel.Game.PlayStatus, Mode=OneWay}" To="Pause" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--<Setter Target="played_time_TextBlock.Foreground" Value="{ThemeResource SystemFillColorCautionBrush}" />-->
                        <Setter Target="le_Button.IsEnabled" Value="False" />
                        <Setter Target="stop_Button.IsEnabled" Value="True" />
                        <Setter Target="screen_capture_Button.IsEnabled" Value="True" />

                        <Setter Target="play_Button.Foreground" Value="{ThemeResource SystemFillColorCautionBrush}" />
                        <Setter Target="play_Button.Content" Value="{mui:FontIcon Glyph=&#xE768;}" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
            <VisualStateGroup>
                <VisualState x:Name="StopTimingWhenNotActiveCheckState">
                    <VisualState.StateTriggers>
                        <mtriggers:IsEqualStateTrigger Value="{x:Bind ViewModel.Game.StopTimingWhenNotActive, Mode=OneWay}" To="True" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  SystemFillColorSuccessBrush，不支持为啥没法用ThemeResource  -->
                        <Setter Target="toggle_stop_timing_MenuFlyoutItem.Icon" Value="{mui:FontIcon Foreground='#0F7B0F', Glyph=&#xE73E;}" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <interactivity:Interaction.Behaviors>
            <interactivity:DataTriggerBehavior Binding="{x:Bind ViewModel.Game.CustomTheme.ThemeTypeValue, Mode=OneWay}"
                                               ComparisonCondition="Equal"
                                               Value="0">
                <!--  默认是渐变背景  -->
                <interactivity:ChangePropertyAction PropertyName="Background"
                                                    TargetObject="{x:Bind root_Grid}"
                                                    Value="{StaticResource BackgroundLinearGradientBrush}" />
            </interactivity:DataTriggerBehavior>
            <interactivity:DataTriggerBehavior Binding="{x:Bind ViewModel.Game.CustomTheme.ThemeTypeValue, Mode=OneWay}"
                                               ComparisonCondition="Equal"
                                               Value="1">
                <interactivity:ChangePropertyAction PropertyName="Background"
                                                    TargetObject="{x:Bind root_Grid}"
                                                    Value="{StaticResource BackgroundImageBrush}" />
            </interactivity:DataTriggerBehavior>
            <interactivity:DataTriggerBehavior Binding="{x:Bind ViewModel.Game.CustomTheme.ThemeTypeValue, Mode=OneWay}"
                                               ComparisonCondition="Equal"
                                               Value="2">
                <interactivity:ChangePropertyAction PropertyName="Background"
                                                    TargetObject="{x:Bind root_Grid}"
                                                    Value="{StaticResource BackgroundLinearGradientBrush}" />
            </interactivity:DataTriggerBehavior>
        </interactivity:Interaction.Behaviors>
        <!--  title  -->
        <StackPanel Height="50" Spacing="20">
            <Button x:Name="back_Button"
                    Width="46"
                    Height="32"
                    Padding="4"
                    Background="Transparent"
                    BorderBrush="{x:Null}"
                    Click="back_Button_Click"
                    Content="{mui:FontIcon FontSize=16,
                                           Glyph=&#xE76B;}"
                    CornerRadius="0"
                    Visibility="{x:Bind ViewModel.Game.CustomTheme.HideReturn, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}" />
        </StackPanel>
        <!--  center  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  left  -->
            <Grid Grid.Column="1" Visibility="{x:Bind ViewModel.Game.CustomTheme.HideCover, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3.5*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="3.5*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Image x:Name="cover_Image"
                       Grid.Row="1"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       DoubleTapped="cover_Image_DoubleTapped"
                       Source="{x:Bind ViewModel.Game.CoverImageSource, Mode=OneWay}" />
            </Grid>
            <!--  right  -->
            <Grid Grid.Column="2"
                  Padding="0,0,36,0"
                  Visibility="{x:Bind ViewModel.Game.CustomTheme.HideGameInfo, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="12*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1" Spacing="14">
                    <TextBlock IsTextSelectionEnabled="True"
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               Text="{x:Bind ViewModel.Game.Name, Mode=OneWay}" />
                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <StackPanel.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}" />
                                <Setter Property="FontSize" Value="15" />
                            </Style>
                        </StackPanel.Resources>
                        <StackPanel Orientation="Horizontal">

                            <TextBlock x:Uid="Game_Play_Company" />
                            <TextBlock Text="：" />
                            <TextBlock extensions:CursorExtension.Cursor="Hand" Text="{x:Bind ViewModel.Game.Company, Mode=OneWay}">
                                <interactivity:Interaction.Behaviors>
                                    <behaviors:ClickTriggerBehavior>
                                        <mbehaviors:NavigateToUriAction NavigateUri="{x:Bind ViewModel.Game.Website, Mode=OneWay}" />
                                    </behaviors:ClickTriggerBehavior>
                                </interactivity:Interaction.Behaviors>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Game_Play_Scenario" />
                            <TextBlock Text="：" />
                            <controls:MetadataControl Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                      ItemsSource="{x:Bind ViewModel.Game.Scenario, Mode=OneWay}"
                                                      Separator=" " />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Game_Play_Artist" />
                            <TextBlock Text="：" />
                            <controls:MetadataControl Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                      ItemsSource="{x:Bind ViewModel.Game.Artist, Mode=OneWay}"
                                                      Separator=" " />
                        </StackPanel>
                    </StackPanel>
                    <mcontrols:Segmented x:Name="switch_Segmented"
                                         Margin="0,10,0,0"
                                         CornerRadius="16"
                                         SelectedIndex="0">
                        <mcontrols:SegmentedItem Content="STORY"
                                                 CornerRadius="16"
                                                 Loaded="SegmentedItem_Loaded"
                                                 Tag="story" />
                        <mcontrols:SegmentedItem Content="BLOG"
                                                 CornerRadius="16"
                                                 Loaded="SegmentedItem_Loaded"
                                                 Tag="blog" />
                        <mcontrols:SegmentedItem Content="CHARACTER"
                                                 CornerRadius="16"
                                                 Loaded="SegmentedItem_Loaded"
                                                 Tag="character" />
                        <mcontrols:SegmentedItem Content="PLAYCHART"
                                                 CornerRadius="16"
                                                 Loaded="SegmentedItem_Loaded"
                                                 Tag="playchart" />
                    </mcontrols:Segmented>
                </StackPanel>
                <Grid Grid.Row="2">
                    <mcontrols:SwitchPresenter Margin="0,20" Value="{Binding SelectedItem.Tag, Mode=OneWay, ElementName=switch_Segmented}">
                        <mcontrols:Case Value="story">
                            <ScrollViewer Padding="0,0,10,0">
                                <TextBlock HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           FontSize="15"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           IsTextSelectionEnabled="True"
                                           Text="{x:Bind ViewModel.Game.Story, Mode=OneWay}"
                                           TextWrapping="Wrap" />
                            </ScrollViewer>
                        </mcontrols:Case>
                        <mcontrols:Case Value="blog">
                            <TextBox Padding="10,5,10,6"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     AcceptsReturn="True"
                                     Background="Transparent"
                                     BorderBrush="Transparent"
                                     FontSize="15"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                     LostFocus="blog_TextBox_LostFocus"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     Text="{x:Bind ViewModel.Game.Blog, Mode=TwoWay}"
                                     TextWrapping="Wrap" />
                        </mcontrols:Case>
                        <mcontrols:Case Value="character">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <FlipView x:Name="character_FlipView"
                                          Background="Transparent"
                                          ItemsSource="{x:Bind ViewModel.Game.Characters, Mode=OneWay}"
                                          Loaded="character_FlipView_Loaded">
                                    <FlipView.ItemTemplate>
                                        <DataTemplate x:DataType="vm:CharacterInfo">
                                            <Grid>
                                                <Grid.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}" />
                                                        <Setter Property="IsTextSelectionEnabled" Value="True" />
                                                        <Setter Property="FontSize" Value="15" />
                                                    </Style>
                                                </Grid.Resources>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.5*" />
                                                    <ColumnDefinition Width="3.5*" />
                                                </Grid.ColumnDefinitions>

                                                <Image x:Name="character_illustration_Image"
                                                       Margin="8"
                                                       VerticalAlignment="Top"
                                                       DoubleTapped="character_illustration_Image_DoubleTapped"
                                                       Source="{Binding Illustration}" />
                                                <Grid Grid.Column="1" Padding="30,40,0,0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.Resources>
                                                        <Style x:Key="BodyStrongTextBlockStyle"
                                                               BasedOn="{StaticResource BodyStrongTextBlockStyle}"
                                                               TargetType="TextBlock">
                                                            <Setter Property="IsTextSelectionEnabled" Value="True" />
                                                            <Setter Property="FontSize" Value="15" />
                                                        </Style>
                                                    </Grid.Resources>
                                                    <StackPanel Spacing="6">
                                                        <StackPanel Orientation="Horizontal" Spacing="0">
                                                            <TextBlock IsTextSelectionEnabled="True"
                                                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                                                       Text="{x:Bind TranslatedName, Mode=OneWay}" />
                                                            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}"
                                                                       Text="{x:Bind Name, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='（{0}）'}"
                                                                       TextAlignment="Center"
                                                                       Visibility="{x:Bind TranslatedName, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
                                                            <TextBlock Margin="0,0,8,0"
                                                                       IsTextSelectionEnabled="True"
                                                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                                                       Text="{x:Bind Name, Mode=OneWay}"
                                                                       Visibility="{x:Bind TranslatedName, Mode=OneWay, Converter={StaticResource EmptyStringToCollapsedConverter}}" />
                                                            <TextBlock VerticalAlignment="Bottom"
                                                                       Text="{x:Bind CV, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='CV：{0}'}"
                                                                       Visibility="{x:Bind CV, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
                                                        </StackPanel>

                                                        <StackPanel Padding="10,0"
                                                                    Orientation="Horizontal"
                                                                    Spacing="8">
                                                            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                                       Text="{x:Bind Birthday, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:MM/dd}'}"
                                                                       Visibility="{x:Bind Birthday.Ticks, Mode=OneWay, Converter={StaticResource DoubleToVisibilityConverter}}" />
                                                            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                                       Text="{x:Bind Age, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0}y'}"
                                                                       Visibility="{x:Bind Age, Mode=OneWay, Converter={StaticResource DoubleToVisibilityConverter}}" />
                                                            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                                       Text="{x:Bind BloodType, Mode=OneWay}"
                                                                       Visibility="{x:Bind BloodType, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
                                                        </StackPanel>
                                                        <StackPanel Padding="10,0"
                                                                    Orientation="Horizontal"
                                                                    Spacing="8">
                                                            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                                       Text="{x:Bind Height, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0}cm'}"
                                                                       Visibility="{x:Bind Height, Mode=OneWay, Converter={StaticResource DoubleToVisibilityConverter}}" />
                                                            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                                       Text="{x:Bind Weight, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0}kg'}"
                                                                       Visibility="{x:Bind Weight, Mode=OneWay, Converter={StaticResource DoubleToVisibilityConverter}}" />

                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                                           Text="{x:Bind Bust, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='B{0}'}"
                                                                           Visibility="{x:Bind Bust, Mode=OneWay, Converter={StaticResource DoubleToVisibilityConverter}}" />
                                                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                                           Text="{x:Bind Cup, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='({0})'}"
                                                                           Visibility="{x:Bind Cup, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
                                                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                                           Text="{x:Bind Waist, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='/W{0}'}"
                                                                           Visibility="{x:Bind Waist, Mode=OneWay, Converter={StaticResource DoubleToVisibilityConverter}}" />
                                                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                                           Text="{x:Bind Hips, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='/H{0}'}"
                                                                           Visibility="{x:Bind Hips, Mode=OneWay, Converter={StaticResource DoubleToVisibilityConverter}}" />
                                                            </StackPanel>
                                                        </StackPanel>

                                                    </StackPanel>

                                                    <ScrollViewer Grid.Row="1"
                                                                  Margin="0,20,0,0"
                                                                  Padding="0,0,10,0">
                                                        <TextBlock HorizontalAlignment="Stretch"
                                                                   Text="{x:Bind Description, Mode=OneWay}"
                                                                   TextWrapping="Wrap" />
                                                    </ScrollViewer>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </FlipView.ItemTemplate>
                                </FlipView>
                                <ListView Grid.Row="1"
                                          Height="64"
                                          HorizontalAlignment="Center"
                                          ItemsSource="{x:Bind ViewModel.Game.Characters, Mode=OneWay}"
                                          ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                          ScrollViewer.HorizontalScrollMode="Enabled"
                                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                          ScrollViewer.VerticalScrollMode="Disabled"
                                          SelectedIndex="{x:Bind character_FlipView.SelectedIndex, Mode=TwoWay}">
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsWrapGrid MaximumRowsOrColumns="1" Orientation="Vertical" />
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="vm:CharacterInfo">
                                            <Image Source="{Binding Illustration}" />
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </mcontrols:Case>
                        <mcontrols:Case Value="playchart">
                            <controls:GamePlayedPeriodChartControl ApplyTheme="{x:Bind ViewModel.Game.CustomTheme.RequestedTheme, Mode=OneWay}"
                                                                   PlayedPeriods="{x:Bind ViewModel.Game.PlayedPeriods, Mode=OneWay}"
                                                                   ShowClose="Collapsed" />
                        </mcontrols:Case>
                    </mcontrols:SwitchPresenter>
                </Grid>
            </Grid>
        </Grid>
        <!--  bottom  -->
        <Grid Grid.Row="2"
              Height="80"
              Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}">
            <Grid.Resources>
                <StaticResource x:Key="ButtonBackgroundDisabled" ResourceKey="ControlFillColorTransparentBrush" />
                <StaticResource x:Key="ButtonBorderBrushDisabled" ResourceKey="ControlFillColorTransparentBrush" />
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  left  -->
            <StackPanel Padding="20,0"
                        Orientation="Horizontal"
                        Spacing="10">
                <Button x:Name="gallery_Button"
                        Click="gallery_Button_Click"
                        Content="{mui:FontIcon Glyph=&#xE8B9;}"
                        Style="{StaticResource BottomButtonStyle}"
                        ToolTipService.ToolTip="GALLERY" />
                <Button x:Name="special_Button"
                        Click="special_Button_Click"
                        Content="{mui:FontIcon Glyph=&#xECA5;}"
                        Style="{StaticResource BottomButtonStyle}"
                        ToolTipService.ToolTip="SPECIAL" />
                <Button x:Name="screenshot_Button"
                        Click="screenshot_Button_Click"
                        Content="{mui:FontIcon Glyph=&#xF408;}"
                        Style="{StaticResource BottomButtonStyle}"
                        ToolTipService.ToolTip="SCREENSHOT" />
                <TextBlock x:Name="played_time_TextBlock"
                           VerticalAlignment="Center"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           Text="{x:Bind ViewModel.Game.PlayedTime, Mode=OneWay, Converter={StaticResource TimeSpanFormatStringConverter}, ConverterParameter='hhmmss'}" />
            </StackPanel>
            <!--  center  -->
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="10">
                <Button x:Name="le_Button"
                        Content="LE"
                        FontSize="18"
                        IsEnabled="{x:Bind ViewModel.Settings.LocalEmulator.LEProcPath, Mode=OneWay, Converter={StaticResource EmptyStringToBoolConverter}}"
                        Style="{StaticResource BottomButtonStyle}"
                        ToolTipService.ToolTip="Local Emulator">
                    <Button.Flyout>
                        <MenuFlyout x:Name="local_emulator_MenuFlyout"
                                    Opening="local_emulator_MenuFlyout_Opening"
                                    Placement="RightEdgeAlignedTop" />
                    </Button.Flyout>
                </Button>
                <Button x:Name="play_Button"
                        Width="40"
                        Height="40"
                        Padding="0"
                        BorderBrush="{x:Null}"
                        Click="play_Button_Click"
                        Content="{mui:FontIcon Glyph=&#xF5B0;}"
                        CornerRadius="20"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <Button x:Name="stop_Button"
                        Click="stop_Button_Click"
                        Content="{mui:FontIcon Glyph=&#xE71A;}"
                        IsEnabled="False"
                        Style="{StaticResource BottomButtonStyle}"
                        ToolTipService.ToolTip="Stop" />

            </StackPanel>
            <!--  right  -->
            <StackPanel Grid.Column="2"
                        Padding="20,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="10">
                <Button x:Name="targets_Button"
                        Click="targets_Button_Click"
                        Content="{mui:FontIcon Glyph=&#xEA37;}"
                        Style="{StaticResource BottomButtonStyle}" />
                <!--<Button x:Name="favorite_Button"
                        Content="{mui:FontIcon Glyph=&#xEB51;}"
                        Style="{StaticResource BottomButtonStyle}"
                        ToolTipService.ToolTip="Favorite" />-->
                <Button x:Name="screen_capture_Button"
                        Click="screen_capture_Button_Click"
                        Content="{mui:FontIcon Glyph=&#xF406;}"
                        IsEnabled="False"
                        Style="{StaticResource BottomButtonStyle}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.Game.SelectedTarget.ScreenCaptureHotkey, Mode=OneWay}" />
                <Button x:Name="library_Button"
                        Click="library_Button_Click"
                        Content="{mui:FontIcon Glyph=&#xE8F1;}"
                        Style="{StaticResource BottomButtonStyle}" />
                <Button x:Name="more_Button"
                        Content="{mui:FontIcon Glyph=&#xE712;}"
                        Style="{StaticResource BottomButtonStyle}">
                    <Button.Flyout>
                        <MenuFlyout Placement="RightEdgeAlignedBottom">
                            <MenuFlyoutItem x:Uid="Commom_MenuItem_Open_Folder"
                                            Command="{x:Bind ViewModel.Game.OpenJsonFolderCommand, Mode=OneWay}"
                                            Icon="{mui:FontIcon Glyph=&#xE838;}" />

                            <MenuFlyoutItem x:Uid="Commom_MenuItem_Open_In_Bangumi"
                                            Click="bangumi_MenuFlyoutItem_Click"
                                            IsEnabled="{x:Bind ViewModel.Game.BangumiSubjectId, Mode=OneWay, Converter={StaticResource EmptyStringToBoolConverter}}">
                                <MenuFlyoutItem.Icon>
                                    <ImageIcon Source="{ThemeResource BangumiIcon}" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Uid="Commom_MenuItem_Open_In_2DFan"
                                            Click="t2dfan_MenuFlyoutItem_Click"
                                            IsEnabled="{x:Bind ViewModel.Game.T2DFanSubjectId, Mode=OneWay, Converter={StaticResource EmptyStringToBoolConverter}}">
                                <MenuFlyoutItem.Icon>
                                    <ImageIcon Source="{ThemeResource T2DFanIcon}" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutSubItem x:Uid="Commom_MenuItem_Shopping_Site" Icon="{mui:FontIcon Glyph=&#xE7BF;}">
                                <MenuFlyoutItem Command="{x:Bind ViewModel.Game.ShoppingInfo.OpenInGetchuCommand}"
                                                IsEnabled="{x:Bind ViewModel.Game.ShoppingInfo.GetchuProductId, Mode=OneWay, Converter={StaticResource EmptyStringToBoolConverter}, FallbackValue=False}"
                                                Text="Getchu" />
                                <MenuFlyoutItem Command="{x:Bind ViewModel.Game.ShoppingInfo.OpenInDMMCommand}"
                                                IsEnabled="{x:Bind ViewModel.Game.ShoppingInfo.DMMProductId, Mode=OneWay, Converter={StaticResource EmptyStringToBoolConverter}, FallbackValue=False}"
                                                Text="DMM" />
                                <MenuFlyoutItem Command="{x:Bind ViewModel.Game.ShoppingInfo.OpenInDLsiteCommand}"
                                                IsEnabled="{x:Bind ViewModel.Game.ShoppingInfo.DLsiteProductId, Mode=OneWay, Converter={StaticResource EmptyStringToBoolConverter}, FallbackValue=False}"
                                                Text="DLsite" />
                                <MenuFlyoutItem Command="{x:Bind ViewModel.Game.ShoppingInfo.OpenInMelonbooksCommand}"
                                                IsEnabled="{x:Bind ViewModel.Game.ShoppingInfo.MelonbooksProductId, Mode=OneWay, Converter={StaticResource EmptyStringToBoolConverter}, FallbackValue=False}"
                                                Text="Melonbooks" />
                            </MenuFlyoutSubItem>

                            <MenuFlyoutSeparator />
                            <MenuFlyoutItem x:Name="toggle_stop_timing_MenuFlyoutItem"
                                            x:Uid="Commom_MenuItem_Auto_Stop_Timing"
                                            Click="toggle_stop_timing_MenuFlyoutItem_Click" />
                            <MenuFlyoutItem x:Name="select_game_process_MenuFlyoutItem"
                                            x:Uid="Commom_MenuItem_Select_Game_Process"
                                            Click="select_game_process_MenuFlyoutItem_Click"
                                            Icon="{mui:FontIcon Glyph=&#xE768;}"
                                            IsEnabled="{x:Bind ViewModel.Game.IsPlaying, Mode=OneWay, Converter={StaticResource BoolInvertConverter}}" />

                            <MenuFlyoutSeparator />
                            <MenuFlyoutItem x:Name="custom_theme_MenuFlyoutItem"
                                            x:Uid="Commom_MenuItem_Custom_Theme"
                                            Click="custom_theme_MenuFlyoutItem_Click"
                                            Icon="{mui:FontIcon Glyph=&#xE790;}" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </Grid>

        <!--  custom theme  -->
        <Grid x:Name="custom_theme_popup_Grid"
              Grid.RowSpan="3"
              Background="Transparent"
              IsTabStop="False"
              Visibility="Collapsed">
            <Grid MinWidth="720"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Background="{ThemeResource ContentDialogBackground}"
                  CornerRadius="{ThemeResource OverlayCornerRadius}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ContentPresenter Grid.ColumnSpan="2"
                                  Padding="{ThemeResource ContentDialogPadding}"
                                  Background="{ThemeResource ContentDialogTopOverlay}">
                    <controls:ThemeInfoControl DataContext="{x:Bind ViewModel.Game.CustomTheme, Mode=OneWay}"
                                               ImageFolder="{x:Bind ViewModel.Game.FolderPath, Mode=OneTime}"
                                               IsGameMode="True" />
                </ContentPresenter>

                <Button x:Name="custom_theme_confirm_Button"
                        x:Uid="Dlg_Confirm_Button"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="24,24,4,24"
                        HorizontalAlignment="Stretch"
                        Click="custom_theme_confirm_Button_Click"
                        ElementSoundMode="FocusOnly"
                        Style="{ThemeResource AccentButtonStyle}" />
                <Button x:Name="custom_theme_cancel_Button"
                        x:Uid="Dlg_Cancel_Button"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="4,24,24,24"
                        HorizontalAlignment="Stretch"
                        Click="custom_theme_cancel_Button_Click"
                        ElementSoundMode="FocusOnly"
                        Style="{ThemeResource DefaultButtonStyle}" />
            </Grid>
        </Grid>

        <!--  select game process  -->
        <Grid x:Name="select_game_process_Grid"
              Grid.RowSpan="3"
              Background="Transparent"
              IsTabStop="False"
              Visibility="Collapsed">
            <Grid MinWidth="360"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Background="{ThemeResource ContentDialogBackground}"
                  CornerRadius="{ThemeResource OverlayCornerRadius}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ContentPresenter Grid.ColumnSpan="2"
                                  Padding="{ThemeResource ContentDialogPadding}"
                                  Background="{ThemeResource ContentDialogTopOverlay}">
                    <ListView x:Name="select_game_process_ListView"
                              MaxHeight="720"
                              ItemContainerStyle="{StaticResource CustomListViewItemStyle}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="diagnostics:Process">
                                <Grid Padding="8"
                                      ColumnSpacing="16"
                                      RowSpacing="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.RowSpan="2"
                                           Width="32"
                                           Height="32"
                                           Source="{x:Bind extensions:ProcessExtensions.GetIcon(Id)}" />
                                    <TextBlock Grid.Column="1"
                                               Grid.ColumnSpan="2"
                                               Style="{ThemeResource BodyStrongTextBlockStyle}"
                                               Text="{x:Bind MainWindowTitle, Mode=OneTime}" />
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="1"
                                               Style="{ThemeResource BodyTextBlockStyle}"
                                               Text="{x:Bind ProcessName, Mode=OneTime}" />
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="2"
                                               Style="{ThemeResource BodyTextBlockStyle}"
                                               Text="{x:Bind Id, Mode=OneTime}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>
                </ContentPresenter>

                <Button x:Name="select_game_process_confirm_Button"
                        x:Uid="Dlg_Confirm_Button"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="24,24,4,24"
                        HorizontalAlignment="Stretch"
                        Click="select_game_process_confirm_Button_Click"
                        ElementSoundMode="FocusOnly"
                        Style="{ThemeResource AccentButtonStyle}" />
                <Button x:Name="select_game_process_cancel_Button"
                        x:Uid="Dlg_Cancel_Button"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="4,24,24,24"
                        HorizontalAlignment="Stretch"
                        Click="select_game_process_cancel_Button_Click"
                        ElementSoundMode="FocusOnly"
                        Style="{ThemeResource DefaultButtonStyle}" />
            </Grid>
        </Grid>
    </Grid>
</Page>
