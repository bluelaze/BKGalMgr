<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="BKGalMgr.Views.Controls.PlayedPeriodListEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:BKGalMgr.Views.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:BKGalMgr.Views.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mcontrols="using:CommunityToolkit.WinUI.Controls"
             xmlns:mui="using:CommunityToolkit.WinUI"
             xmlns:primitives="using:Microsoft.UI.Xaml.Controls.Primitives"
             xmlns:sys="using:System"
             xmlns:vm="using:BKGalMgr.ViewModels"
             mc:Ignorable="d">
    <mcontrols:HeaderedContentControl>
        <mcontrols:HeaderedContentControl.Header>
            <Grid Margin="16,0" ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="178" />
                    <ColumnDefinition Width="178" />
                    <ColumnDefinition Width="102" />
                    <ColumnDefinition Width="52" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </Grid.Resources>
                <TextBlock x:Uid="Played_Periods_Edit_Begin" Grid.Column="0" />
                <TextBlock x:Uid="Played_Periods_Edit_End" Grid.Column="1" />
                <TextBlock x:Uid="Played_Periods_Edit_Pause" Grid.Column="2" />
                <TextBlock x:Uid="Played_Periods_Edit_Played" Grid.Column="3" />
                <Button x:Name="add_Button"
                        Grid.Column="4"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="{x:Null}"
                        Click="add_Button_Click"
                        Content="{mui:FontIcon FontSize=16,
                                               Glyph=&#xE948;}"
                        Style="{StaticResource IconButtonStyle}" />
            </Grid>
        </mcontrols:HeaderedContentControl.Header>
        <ListView MinHeight="360"
                  ItemContainerStyle="{StaticResource CustomListViewItemStyle}"
                  ItemsSource="{x:Bind PlayedPeriods}"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:PlayedPeriodInfo">
                    <Grid Padding="0,12,0,12" ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Width="178"
                                 mui:TextBoxExtensions.Mask="9999-99-99 99:99:99"
                                 Text="{Binding BenginTime, Mode=TwoWay, Converter={StaticResource DateTimeFormatStringConverter}, ConverterParameter='yyyy-MM-dd HH:mm:ss'}"
                                 TextChanged="datetime_TextBox_TextChanged" />
                        <TextBox Grid.Column="1"
                                 Width="178"
                                 mui:TextBoxExtensions.Mask="9999-99-99 99:99:99"
                                 Text="{Binding EndTime, Mode=TwoWay, Converter={StaticResource DateTimeFormatStringConverter}, ConverterParameter='yyyy-MM-dd HH:mm:ss'}"
                                 TextChanged="datetime_TextBox_TextChanged" />
                        <TextBox Grid.Column="2"
                                 Width="102"
                                 mui:TextBoxExtensions.Mask="99:99:99"
                                 Text="{Binding PauseTime, Mode=TwoWay, Converter={StaticResource TimeSpanFormatStringConverter}, ConverterParameter='hhmmss'}"
                                 TextChanged="timespan_TextBox_TextChanged" />
                        <TextBlock Grid.Column="3"
                                   Width="52"
                                   VerticalAlignment="Center"
                                   Text="{Binding Period, Mode=OneWay, Converter={StaticResource TimeSpanFormatStringConverter}, ConverterParameter='hhmmss'}" />
                        <Button x:Name="delete_Button"
                                Grid.Column="4"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="{x:Null}"
                                Click="delete_Button_Click"
                                Content="{mui:FontIcon FontSize=16,
                                                       Glyph=&#xE74D;}"
                                Style="{StaticResource IconButtonStyle}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </mcontrols:HeaderedContentControl>
</UserControl>
