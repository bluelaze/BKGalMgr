<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="BKGalMgr.Views.Controls.BangumiPullSubjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:BKGalMgr.Views.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="local:HeaderedTextBox">
                <Setter Property="HeaderWidth" Value="98" />
            </Style>
        </StackPanel.Resources>
        <local:HeaderedTextBox x:Uid="Bangumi_Pull_Game_Access_Token"
                               CanEmpty="False"
                               Header="Access Token"
                               Text="{x:Bind AccessToken, Mode=TwoWay}" />
        <local:HeaderedTextBox x:Uid="Bangumi_Pull_Game_Subject_Url"
                               CanEmpty="False"
                               PlaceholderText="https://bangumi.tv/subject/113290"
                               Text="{x:Bind SubjectUrl, Mode=TwoWay}" />

    </StackPanel>
</UserControl>
